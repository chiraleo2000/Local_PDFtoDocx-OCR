# ============================================
# PDF OCR Service â€” Environment Configuration (Example)
# ============================================
# Copy this file to .env and adjust values for your setup.

# --- Server ---
SERVER_HOST=0.0.0.0
SERVER_PORT=7870
SHARE_GRADIO=false
MAX_FILE_SIZE_MB=50

# --- OCR Engines ---
# Options: tesseract | paddleocr | easyocr | auto
OCR_ENGINE=tesseract
OCR_FALLBACK=tesseract

# --- GPU ---
USE_GPU=false
CUDA_DEVICE=0

# --- LLM Correction ---
LLM_CORRECTION=false
LLM_BACKEND=disabled
# LLM_MODEL=Qwen/Qwen2.5-VL-7B-Instruct
# LLM_QUANTIZE=4bit
# OLLAMA_BASE_URL=http://localhost:11434

# --- Languages ---
# auto-detect or pin: eng+tha+chi_sim+jpn+kor+ara
LANGUAGES=eng
LLM_LANGUAGE_HINT=auto

# --- Layout Detection ---
YOLO_CONFIDENCE=0.25
YOLO_NMS=0.45

# --- Table Detection ---
TABLE_DETECTION=true
TABLE_ENGINE=opencv

# --- Image Extraction ---
IMAGE_EXTRACTION=true

# --- Quality Preset ---
# Options: fast | balanced | accurate
QUALITY_PRESET=balanced

# --- History ---
HISTORY_RETENTION_DAYS=30
