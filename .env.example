# ============================================
# PDF OCR Service â€” Environment Configuration (Example)
# v0.5.0  |  CPU-only, HTML-first export, auto-retrain
# ============================================
# Copy this file to .env and adjust values for your setup.

# --- Server ---
SERVER_HOST=0.0.0.0
SERVER_PORT=7870
SHARE_GRADIO=false
MAX_FILE_SIZE_MB=50

# --- OCR Engines ---
# Options: tesseract | paddleocr | easyocr | auto
OCR_ENGINE=tesseract
OCR_FALLBACK=tesseract

# --- GPU ---
USE_GPU=false
CUDA_DEVICE=0

# --- Languages ---
# auto-detect or pin: eng+tha+chi_sim+jpn+kor+ara
LANGUAGES=tha+eng

# --- Layout Detection ---
YOLO_CONFIDENCE=0.15
YOLO_NMS=0.45

# --- Table Detection ---
TABLE_DETECTION=true
TABLE_ENGINE=opencv

# --- Image Extraction ---
IMAGE_EXTRACTION=true

# --- Quality Preset ---
# Options: fast | balanced | accurate
QUALITY_PRESET=balanced

# --- History ---
HISTORY_RETENTION_DAYS=30

# --- Correction & Auto-Retrain (v0.5) ---
# Directory to store manual correction data (images, labels, JSONL log)
CORRECTION_DATA_DIR=./correction_data
# Number of manual corrections before auto-retrain triggers
RETRAIN_INTERVAL=100
